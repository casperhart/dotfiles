{
  "python.formatting.provider": "black",
  "terminal.integrated.fontFamily": "'MesloLGS NF', 'Hack Nerd Font', Menlo, monospace",
  "editor.fontFamily": "'MesloLGS NF', 'Hack Nerd Font', Menlo, monospace",
  "editor.inlayHints.fontFamily": "'MesloLGS NF', 'Hack Nerd Font', Menlo, monospace",
  "editor.fontSize": 14,
  "terminal.integrated.fontSize": 14,
  "editor.fontLigatures": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.formatOnSave": false
  },
  "[rust]": {
    "editor.defaultFormatter": "statiolake.vscode-rustfmt"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[rmd]": {
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.wordBasedSuggestions": false,
    "editor.snippetSuggestions": "top",
    "editor.wordWrap": "on"
  },
  "explorer.confirmDragAndDrop": false,
  "workbench.iconTheme": "eq-material-theme-icons",
  "workbench.colorTheme": "Catppuccin Macchiato",
  "editor.formatOnSave": true,
  "gitlens.mode.active": "zen",
  "python.languageServer": "Pylance",
  "liveServer.settings.donotShowInfoMsg": true,
  "terminal.integrated.inheritEnv": false,
  "jupyter.askForKernelRestart": false,
  "r.rterm.mac": "/usr/local/bin/radian", //Use this only for a Mac
  "r.rterm.linux": "/home/vagrant/.local/bin/radian",
  "r.rpath.linux": "/usr/bin/R",
  "r.lsp.debug": false,
  "r.lsp.diagnostics": false,
  "r.rterm.option": [
    "--no-save",
    "--no-restore",
    "--r-binary=/usr/local/bin/R"
  ],
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "terminal.external.osxExec": "iterm.app",
  "pdf-preview.default.sidebar": true,
  "r.bracketedPaste": true,
  "r.alwaysUseActiveTerminal": true,
  "r.sessionWatcher": true,
  "gitlens.menus": {
    "editor": false,
    "editorGroup": false,
    "editorTab": false,
    "scm": {
      "authors": true
    },
    "scmGroupInline": {
      "stash": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": false,
      "stash": true
    }
  },
  "terminal.integrated.automationShell.osx": "/bin/zsh",
  "git.autofetch": true,
  "liveServer.settings.root": "dev_build/scatter_widget",
  "files.defaultLanguage": "${activeEditorLanguage}",
  "editor.linkedEditing": true,
  "cSpell.words": [],
  "cSpell.userWords": [
    "datafusion",
    "antialiasing",
    "asis",
    "betainc",
    "bindgen",
    "bmatrix",
    "bookdown",
    "callout",
    "Colour",
    "Colours",
    "detourr",
    "dists",
    "dplyr",
    "fontsize",
    "geozoo",
    "ggobi",
    "ggplot",
    "gifski",
    "gpar",
    "hastie",
    "htmlwidgets",
    "interactivities",
    "knitr",
    "linewidth",
    "magrittr",
    "mathbf",
    "mathrm",
    "mnist",
    "mvrnorm",
    "ncol",
    "newpage",
    "pagebreak",
    "plotly",
    "prcomp",
    "quosures",
    "rmarkdown",
    "roundrect",
    "Rtsne",
    "runif",
    "scatterplot",
    "tfjs",
    "tibble",
    "tidyselect",
    "tourr",
    "tsne",
    "unif",
    "vals",
    "viridis",
    "wasm",
    "XNNPACK"
  ],
  "cSpell.enabled": true,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "explorer.confirmDelete": false,
  "zenMode.hideTabs": false,
  "editor.inlineSuggest.enabled": true,
  "cSpell.language": "en,en-GB",
  "cSpell.ignoreWords": [
    "palmerpenguins"
  ],
  "liveServer.settings.donotVerifyTags": true,
  "editor.guides.bracketPairs": true,
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "rust-analyzer.highlightRelated.exitPoints.enable": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "editor.inlayHints.fontSize": 10,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  //"editor.lineNumbers": "relative",
  "workbench.colorCustomizations": {
    // Name of the theme you are currently using
    "[Gruvbox Dark Hard]": {
      "editorInlayHint.foreground": "#868686f0",
      "editorInlayHint.background": "#22222248",
      // Overrides for specific kinds of inlay hints
      "editorInlayHint.typeForeground": "#fdb6fdf0",
      "editorInlayHint.parameterForeground": "#fdb6fdf0",
    }
  },
  "window.zoomLevel": 1,
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true
  }
}