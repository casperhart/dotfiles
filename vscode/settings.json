{
  "python.formatting.provider": "black",
  "terminal.integrated.fontFamily": "'MesloLGS NF', 'Hack Nerd Font', Menlo, monospace",
  "editor.fontFamily": "'MesloLGS NF', 'Hack Nerd Font', Menlo, monospace",
  "editor.inlayHints.fontFamily": "'MesloLGS NF', 'Hack Nerd Font', Menlo, monospace",
  "editor.fontSize": 14,
  "terminal.integrated.fontSize": 14,
  "editor.fontLigatures": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.formatOnSave": false
  },
  "[rust]": {
    "editor.defaultFormatter": "statiolake.vscode-rustfmt"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": false
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[rmd]": {
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.wordBasedSuggestions": false,
    "editor.snippetSuggestions": "top"
  },
  "explorer.confirmDragAndDrop": false,
  "workbench.iconTheme": "eq-material-theme-icons",
  "workbench.colorTheme": "Community Material Theme Darker High Contrast",
  "editor.formatOnSave": true,
  "gitlens.mode.active": "zen",
  "python.languageServer": "Pylance",
  "liveServer.settings.donotShowInfoMsg": true,
  "terminal.integrated.inheritEnv": false,
  "jupyter.askForKernelRestart": false,
  "r.rterm.mac": "/usr/local/bin/radian", //Use this only for a Mac
  "r.rterm.linux": "/home/vagrant/.local/bin/radian",
  "r.rpath.linux": "/usr/bin/R",
  "r.lsp.debug": false,
  "r.lsp.diagnostics": false,
  "r.rterm.option": [
    "--no-save",
    "--no-restore",
    "--r-binary=/usr/local/bin/R"
  ],
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "terminal.external.osxExec": "iterm.app",
  "pdf-preview.default.sidebar": true,
  "r.bracketedPaste": true,
  "r.alwaysUseActiveTerminal": false,
  "r.sessionWatcher": true,
  "actionButtons": {
    "defaultColor": "#ff0034", // Can also use string color names.
    "loadNpmCommands": false, // Disables automatic generation of actions for npm commands.
    "reloadButton": "♻️", // Custom reload button text or icon (default ↻). null value enables automatic reload on configuration change
    "commands": [
      {
        "cwd": "${fileDirname}", // Terminal initial folder ${workspaceFolder} and os user home as defaults
        "name": "Knit PDF",
        "color": "green",
        "singleInstance": true,
        "command": "echo \"rmarkdown::render('${file}', 'pdf_document')\" | R --slave", // This is executed in the terminal.
      }
    ]
  },
  "gitlens.menus": {
    "editor": false,
    "editorGroup": false,
    "editorTab": false,
    "scm": {
      "authors": true
    },
    "scmGroupInline": {
      "stash": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": false,
      "stash": true
    }
  },
  "terminal.integrated.automationShell.osx": "/bin/zsh",
  "git.autofetch": true,
  "liveServer.settings.root": "dev_build/scatter_widget",
  "files.defaultLanguage": "${activeEditorLanguage}",
  "editor.linkedEditing": true,
  "cSpell.userWords": [
    "bindgen",
    "vals",
    "wasm"
  ],
  "cSpell.enabled": false,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "rust-analyzer.inlayHints.enable": false,
  "explorer.confirmDelete": false,
  "zenMode.hideTabs": false,
}